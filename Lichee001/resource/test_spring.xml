<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:aop="http://www.springframework.org/schema/aop"
      xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">
  <!-- services -->
   
   <aop:config>
      <aop:aspect ref="SpringAop1">
         <aop:pointcut id="theExecutionOfSomeFooServiceMethod"
                    expression="execution(* suse.testspringioc.HelloSpring.*(..))"/>
         <aop:before pointcut-ref="theExecutionOfSomeFooServiceMethod"
                  method="beforeTest"/>
      </aop:aspect>
   </aop:config>
 
  <bean id="HelloSpring"
        class="suse.testspringioc.HelloSpring">
    <property name="str">
    	<value>Hello Spring!</value>
    </property>
    <!-- additional collaborators and configuration for this bean go here -->
  </bean>
 
  <bean id="SpringAop1"
  		class="suse.test.springaop.SpringAop"/>

  

  <!-- more bean definitions for services go here -->

</beans>